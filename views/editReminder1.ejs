<!DOCTYPE html>
<html>
  <head>
    <title>Reminder Form</title>
    <!-- Include Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- Include Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Reminder Form</h1>
      <div class="form">
        <form class="form--editreminder">
          <div class="form-group">
            <label for="reminderID">ReminderId:</label>
            <input
              type="reminderID"
              id="reminderID"
              name="reminderID"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="date"
              >Select a Date: <i class="far fa-calendar-alt"></i
            ></label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label for="subject">Subject:</label>
            <select id="subject" name="subject" class="form-control" required>
              <option value="" selected disabled>Select a subject</option>
              <option value="study">Study</option>
              <option value="office">Office</option>
              <option value="school">School Time</option>
              <option value="cooking">Time to Cook Food</option>
            </select>
          </div>
          <div class="form-group">
            <label for="description">Add description:</label>
            <textarea
              id="description"
              name="description"
              class="form-control"
              rows="4"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" class="form-control" />
          </div>
          <div class="form-group">
            <label for="contactNo">Contact No:</label>
            <input
              type="tel"
              id="contactNo"
              name="contactNo"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="smsNo">SMS No:</label>
            <input type="tel" id="smsNo" name="smsNo" class="form-control" />
          </div>
          <div class="form-group">
            <label>Recur for next:</label>
            <div class="form-check">
              <input
                type="checkbox"
                id="recur7Days"
                name="recur7Days"
                class="form-check-input"
              />
              <label class="form-check-label" for="recur7Days">7 Days</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                id="recur5Days"
                name="recur5Days"
                class="form-check-input"
              />
              <label class="form-check-label" for="recur5Days">5 Days</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                id="recur3Days"
                name="recur3Days"
                class="form-check-input"
              />
              <label class="form-check-label" for="recur3Days">3 Days</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                id="recur2Days"
                name="recur2Days"
                class="form-check-input"
              />
              <label class="form-check-label" for="recur2Days">2 Days</label>
            </div>
          </div>
          <button class="btn btn-primary btn-editreminder">
            Edit Reminder
          </button>
        </form>
      </div>

      <a href="/logout" class="btn btn-danger mt-3">Log out</a>
    </div>
    <!-- Include Bootstrap JS (optional) -->
    <script src="http://localhost:8000/js/bundle.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
